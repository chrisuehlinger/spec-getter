{
	"name": "spec-getter",
	"productName": "spec-getter",
	"version": "1.0.0",
	"description": "My magnificent app",
	"license": "MIT",
	"repository": "chrisuehlinger/spec-getter",
	"author": {
		"name": "Chris Uehlinger",
		"email": "chris.uehlinger@gmail.com",
		"url": "chrisuehlinger.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-log": "^4.1.2",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"jquery": "^3.5.1",
		"systeminformation": "^4.25.1"
	},
	"devDependencies": {
		"electron": "^11.5.0",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.chrisuehlinger.spec-getter",
		"mac": {
			"category": "public.app-category.social-networking",
      "entitlements": "build/entitlements.mac.plist",
			"extendInfo": {
				"NSCameraUsageDescription": "We need camera access to figure out what your webcam's resolution and framerate are."
			}
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
